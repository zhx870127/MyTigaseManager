<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.letv.tigase.dao.impl.UserJidDaoImpl">
    <resultMap id="UserJidMap" type="UserJid">
		<result column="jid_id" property="jidId" jdbcType="DECIMAL" />
		<result column="jid_sha" property="jidSha" jdbcType="VARCHAR" />
		<result column="jid" property="jid" jdbcType="VARCHAR" />
		<result column="history_enabled" property="historyEnabled" jdbcType="DECIMAL" />
    </resultMap>
    
    <sql id="userJidColumns">
    	jid_id,jid_sha,jid,history_enabled
    </sql>
    
     <sql id="userJidUsedColumns">
    	jid_sha,jid,history_enabled
    </sql>

    <!-- 创建信息 -->
    <insert id="insert" parameterType="UserJid" useGeneratedKeys="true" keyProperty="jid_id">
        INSERT INTO user_jid(<include refid="userJidUsedColumns"/>) 
        VALUES (#{jidSha},#{jid},#{historyEnabled})
	</insert>
	
    <!-- 修改信息 -->
    <update id="update" parameterType="UserJid">
        <if test="_parameter != null">
            <if test="id != null and id > 0">
                update user_jid set
		        <if test="jidId != null and jidId != ''">
                	jid_id = #{jidId,jdbcType=DECIMAL},
		        </if>
		        <if test="jidSha != null and jidSha != ''">
                	jid_sha = #{jidSha,jdbcType=VARCHAR},
		        </if>
		        <if test="jid != null and jid != ''">
                	jid = #{jid,jdbcType=VARCHAR},
		        </if>
		        <if test="historyEnabled != null and historyEnabled != ''">
                	history_enabled = #{historyEnabled,jdbcType=DECIMAL},
		        </if>
                	update_time = now()
                where id = #{id}
            </if>
        </if>
    </update>

    <!-- 根据主键获取对象信息 -->
    <select id="getUserJidById" resultMap="UserJidMap" parameterType="java.lang.Long">
        <if test="_parameter != null">
            select <include refid="userJidColumns"/> from user_jid
            where id = #{_parameter} and yn = 1
        </if>
    </select>

    <!-- 根据查询Bean获取数据集合，不带翻页 -->
    <select id="queryUserJidList" resultMap="UserJidMap"
            parameterType="com.letv.tigase.domain.query.UserJidQuery">
        select <include refid="userJidColumns"/> from user_jid where <include refid="queryUserJidListWhere"/>
    </select>

    <!-- 根据查询Bean获取数据集合，翻页 -->
    <select id="queryUserJidListWithPage" resultMap="UserJidMap"
            parameterType="com.letv.tigase.domain.query.UserJidQuery">
        select <include refid="userJidColumns"/> from user_jid where <include refid="queryUserJidListWhere"/>
        order by create_time desc 
        limit #{startIndex},#{pageSize}
    </select>

    <!-- 根据查询Bean查询-判断是否存在 -->
    <select id="exist" resultType="java.lang.Integer" parameterType="UserJid">
        select count(1) from user_jid where yn = 1 and group_name = #{groupName,jdbcType=VARCHAR}
    </select>

    <!-- 根据查询Bean获取集合总数 -->
    <select id="queryUserJidCount" resultType="java.lang.Integer"
            parameterType="com.letv.tigase.domain.query.UserJidQuery">
        select count(1) from user_jid where <include refid="queryUserJidListWhere"/>
    </select>

    <!-- 删除信息-逻辑删除 -->
    <update id="delete" parameterType="UserJid">
		update user_jid 
		set yn = 0, update_time = now(), update_user = #{updateUser,jdbcType=VARCHAR}
		where id = #{id}
    </update>

    <!-- 常用的查询Where条件 -->
    <sql id="queryUserJidListWhere">
    	yn = 1
        <if test="jidId != null and jidId != ''">
        	and jid_id = #{jidId,jdbcType=DECIMAL}
        </if>
        <if test="jidSha != null and jidSha != ''">
        	and jid_sha = #{jidSha,jdbcType=VARCHAR}
        </if>
        <if test="jid != null and jid != ''">
        	and jid = #{jid,jdbcType=VARCHAR}
        </if>
        <if test="historyEnabled != null and historyEnabled != ''">
        	and history_enabled = #{historyEnabled,jdbcType=DECIMAL}
        </if>
    </sql>
</mapper>