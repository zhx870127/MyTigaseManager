<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/tigMaMsgs/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/tigMaMsgs");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/tigMaMsgs/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/tigMaMsgs/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="msgId"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="msgId" id="msgId" class="col-xs-10 col-sm-8" value="$!query.msgId"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="ownerId"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="ownerId" id="ownerId" class="col-xs-10 col-sm-8" value="$!query.ownerId"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="buddyId"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="buddyId" id="buddyId" class="col-xs-10 col-sm-8" value="$!query.buddyId"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="ts"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="ts" id="ts" class="col-xs-10 col-sm-8" value="$!query.ts"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="direction"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="direction" id="direction" class="col-xs-10 col-sm-8" value="$!query.direction"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="type"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="type" id="type" class="col-xs-10 col-sm-8" value="$!query.type"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="body"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="body" id="body" class="col-xs-10 col-sm-8" value="$!query.body"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="msg"></label>
                                    <div class="col-sm-3">
                                        <input type="text" name="msg" id="msg" class="col-xs-10 col-sm-8" value="$!query.msg"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center"></th>
							<th class="center"></th>
							<th class="center"></th>
							<th class="center"></th>
							<th class="center"></th>
							<th class="center"></th>
							<th class="center"></th>
							<th class="center"></th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.msgId</td>
                                <td>$!item.ownerId</td>
                                <td>$!item.buddyId</td>
                                <td>$!item.ts</td>
                                <td>$!item.direction</td>
                                <td>$!item.type</td>
                                <td>$!item.body</td>
                                <td>$!item.msg</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/tigMaMsgs/detailModal.vm")
    </body>
</html>
